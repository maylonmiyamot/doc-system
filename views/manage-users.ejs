<!DOCTYPE html>
<html>
<head>
    <title>Gerenciar Usuários</title>
</head>
<body>
    <h1>Gerenciar Usuários</h1>
    
    <% if (users.length > 0) { %>
        <table>
            <thead>
                <tr>
                    <th>Nome de Usuário</th>
                    <th>Admin</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                    <tr>
                        <td><%= user.username %></td>
                        <td><%= user.is_admin ? 'Sim' : 'Não' %></td>
                        <td>
                            <form action="/remove-user/<%= user.id %>" method="POST" onsubmit="return confirm('Tem certeza que deseja remover este usuário?');">
                                <button type="submit">Remover</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <p>Nenhum usuário encontrado.</p>
    <% } %>

    <a href="/dashboard">Voltar ao Dashboard</a>
    <a href="/register">Criar Usuário</a>
    <A href=""></A>
</body>
</html>
